    .testimonials-section {
        padding: 40px 20px;
    }

    .swiper-container-wrapper {
        gap: 12px;
    }

    .author-avatar {
        width: 70px;
        height: 70px;
        border-width: 3px;
    }

    .avatar-initial {
        font-size: 36px;
    }

    .author-name {
        font-size: 20px;
    }

    .swiper-button-prev-custom,
    .swiper-button-next-custom {
        width: 40px;
        height: 40px;
        font-size: 14px;
    }

    .testimonials-indicators {
        gap: 8px;
        padding-top: 24px;
    }

    .indicator-bar {
        width: 40px;
        height: 4px;
    }
}

@media (max-width: 480px) {
    .swiper-button-prev-custom,
    .swiper-button-next-custom {
        display: none;
    }
    
    .swiper-container-wrapper {
        padding-bottom: 50px;
    }
}
</style>