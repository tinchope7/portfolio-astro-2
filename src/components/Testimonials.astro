<section class="testimonials-section">
    <div class="testimonials-container">
        <h2 class="section-title">Lo que dicen sobre mi trabajo.</h2>
        
        <div class="testimonial-card-wrapper">
            <div class="card testimonial-card">
                <div class="card-label">VALORACIONES PROFESIONALES</div>
                
                <!-- Swiper Container -->
                <div class="swiper-container-wrapper">
                    <!-- Botón Anterior -->
                    <button type="button" class="swiper-button-prev-custom" aria-label="Testimonio anterior">
                        <i class="fas fa-chevron-left"></i>
                    </button>

                    <!-- Swiper -->
                    <div class="swiper testimonials-swiper">
                        <div class="swiper-wrapper">
                            {testimonials.map((testimonial, index) => (
                                <div class="swiper-slide">
                                    <div class="testimonial-content">
                                        <div class="author-header">
                                            <div class="author-avatar" data-color={testimonial.color}>
                                                <span class="avatar-initial" style={`background: ${testimonial.color}`}>
                                                    {testimonial.initial}
                                                </span>
                                            </div>
                                            <div class="author-name">{testimonial.name}</div>
                                        </div>
                                        <div class="testimonial-quote">
                                            {testimonial.text}
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>

                    <!-- Botón Siguiente -->
                    <button type="button" class="swiper-button-next-custom" aria-label="Siguiente testimonio">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
                
                <!-- Indicadores de Progreso -->
                <div class="testimonials-indicators">
                    {testimonials.map((_, index) => (
                        <button 
                            type="button"
                            class={`testimonial-indicator ${index === 0 ? 'active' : ''}`}
                            data-index={index}
                            aria-label={`Ir al testimonio ${index + 1}`}
                        >
                            <span class="indicator-bar"></span>
                        </button>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

<script>
import Swiper from 'swiper';
import { Autoplay, Navigation } from 'swiper/modules';
import 'swiper/css';
import 'swiper/css/navigation';

function initializeSwiper() {
    console.log('Inicializando Swiper...');
    
    const swiperElement = document.querySelector('.testimonials-swiper');
    if (!swiperElement) {
        console.error('No se encontró el elemento .testimonials-swiper');
        return;
    }

    const swiper = new Swiper('.testimonials-swiper', {
        modules: [Autoplay, Navigation],
        slidesPerView: 1,
        spaceBetween: 30,
        speed: 1000,
        autoplay: {
            delay: 8000,
            disableOnInteraction: false,
            pauseOnMouseEnter: true,
        },
        navigation: {
            nextEl: '.swiper-button-next-custom',
            prevEl: '.swiper-button-prev-custom',
        },
        loop: true,
        effect: 'slide',
        on: {
            init: function() {
                console.log('Swiper inicializado correctamente');
                updateIndicators(0);
            },
            slideChange: function() {
                console.log('Slide cambió a:', this.realIndex);
                updateIndicators(this.realIndex);
            },
        },
    });

    function updateIndicators(activeIndex) {
        const indicators = document.querySelectorAll('.testimonial-indicator');
        indicators.forEach((indicator, index) => {
            if (index === activeIndex) {
                indicator.classList.add('active');
            } else {
                indicator.classList.remove('active');
            }
        });
    }

    const indicators = document.querySelectorAll('.testimonial-indicator');
    indicators.forEach((indicator) => {
        indicator.addEventListener('click', function() {
            const index = parseInt(this.getAttribute('data-index') || '0');
            console.log('Click en indicador:', index);
            swiper.slideToLoop(index);
        });
    });
    
    const prevButton = document.querySelector('.swiper-button-prev-custom');
    const nextButton = document.querySelector('.swiper-button-next-custom');
    
    if (prevButton) {
        prevButton.addEventListener('click', (e) => {
            e.preventDefault();
            console.log('Click en botón anterior');
            swiper.slidePrev();
        });
    } else {
        console.error('No se encontró el botón anterior');
    }
    
    if (nextButton) {
        nextButton.addEventListener('click', (e) => {
            e.preventDefault();
            console.log('Click en botón siguiente');
            swiper.slideNext();
        });
    } else {
        console.error('No se encontró el botón siguiente');
    }

    console.log('Swiper configurado con', swiper.slides.length, 'slides');
}

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeSwiper);
} else {
    initializeSwiper();
}

document.addEventListener('astro:page-load', initializeSwiper);
</script>

<style>
.testimonials-section {
    background-color: var(--bg-secondary);
    padding: 80px 24px;
    margin-top: 60px;
}

.testimonials-container {
    max-width: 1000px;
    margin: 0 auto;
}

.section-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(40px, 6vw, 64px);
    font-weight: 800;
    text-align: center;
    margin-bottom: 60px;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--text-primary);
}

.testimonial-card-wrapper {
    display: flex;
    justify-content: center;
}

.testimonial-card {
    width: 100%;
    position: relative;
}

.swiper-container-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    gap: 20px;
    padding-bottom: 60px;
}

.testimonials-swiper {
    width: 100%;
    height: auto;
    flex: 1;
}

.swiper-wrapper {
    align-items: stretch;
}

.swiper-slide {
    height: auto;
    display: flex;
    align-items: center;
}

.testimonial-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 32px;
    align-items: center;
}

.author-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    animation: fadeInAuthor 0.8s ease-out;
}

.author-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid var(--accent-primary);
    box-shadow: 0 4px 16px rgba(124, 152, 133, 0.3);
    animation: scaleIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    display: flex;
    align-items: center;
    justify-content: center;
}

.avatar-initial {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    font-weight: 900;
    color: white;
    font-family: 'Space Grotesk', sans-serif;
    text-transform: uppercase;
}

.author-name {
    font-size: 28px;
    font-weight: 700;
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: center;
}

.testimonial-quote {
    font-size: clamp(18px, 2vw, 22px);
    font-weight: 400;
    line-height: 1.8;
    color: var(--text-secondary);
    text-align: center;
    animation: fadeInQuote 0.8s ease-out 0.3s both;
    max-width: 100%;
}

/* Botones de navegación */
.swiper-button-prev-custom,
.swiper-button-next-custom {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--bg-card);
    border: 2px solid var(--border-medium);
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 20px;
    flex-shrink: 0;
    z-index: 10;
}

.swiper-button-prev-custom:hover,
.swiper-button-next-custom:hover {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    color: white;
    transform: scale(1.15);
    box-shadow: 0 4px 16px rgba(124, 152, 133, 0.4);
}

.swiper-button-prev-custom:active,
.swiper-button-next-custom:active {
    transform: scale(1.05);
}

/* Indicadores */
.testimonials-indicators {
    display: flex;
    justify-content: center;
    gap: 12px;
    padding-top: 32px;
    border-top: 1px solid var(--border-light);
}

.testimonial-indicator {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    position: relative;
}

.indicator-bar {
    display: block;
    width: 50px;
    height: 5px;
    background: var(--border-medium);
    border-radius: 3px;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
}

.indicator-bar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: var(--accent-primary);
    transition: width 0.3s ease;
}

.testimonial-indicator.active .indicator-bar {
    background: rgba(124, 152, 133, 0.3);
}

.testimonial-indicator.active .indicator-bar::before {
    width: 100%;
    animation: indicatorProgress 8s linear;
}

.testimonial-indicator:hover .indicator-bar {
    background: var(--border-dark);
    transform: scaleY(1.4);
}

@keyframes fadeInAuthor {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes scaleIn {
    0% {
        opacity: 0;
        transform: scale(0);
    }
    50% {
        transform: scale(1.1);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes fadeInQuote {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes indicatorProgress {
    from { width: 0%; }
    to { width: 100%; }
}

